<?xml version="1.0"?>
<schema
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../xsd/squeal.xsd">
 
 <types>
  <type name="SQL">
    <define-method name="getSQLType"/>
    <define-constraint name="regexp"	type="client" />
  </type>
  
  <type name="String" base="SQL"		size="255">
    <define-constraint name="length"	type="client" />
  </type>
  
  <type name="Binary" base="String"		size="255">
    <define-constraint name="length"	type="client" />
  </type>
  
  <type name="Integer" base="SQL">
    <define-constraint name="range"		type="client" />
    <define-constraint name="minimum"	type="client" />
    <define-constraint name="maximum"	type="client" />
    <define-constraint name="positive"	type="client" />
    <define-constraint name="negative"	type="client" />
  </type>
 
  <type name="Real">
    <define-constraint name="range"		type="client" />
    <define-constraint name="minimum"	type="client" />
    <define-constraint name="maximum"	type="client" />
    <define-constraint name="positive"	type="client" />
    <define-constraint name="negative"	type="client" />
  </type>
  
  <type name="Date" base="SQL">
    <define-constraint name="range"		type="client" />
    <define-constraint name="past"		type="client" />
    <define-constraint name="future"	type="client" />
    
    <constrain name="regexp" match="^[0-9]{4}-[01][0-9]-[0-3][0-9]$" />
  </type>
  
  <type name="Time" base="SQL">
    <define-constraint name="range"		type="client" />
    <define-constraint name="past"		type="client" />
    <define-constraint name="future"	type="client" />
    
    <constrain name="regexp" match="^[0-2][0-9]:[0-5][0-9]$" />
  </type>
  
  <type name="Timestamp" base="SQL">
    <define-constraint name="range"		type="client" />
    <define-constraint name="past"		type="client" />
    <define-constraint name="future"	type="client" />
 
    <constrain name="regexp" 
   			 match="^[0-9]{4}-[01][0-9]-[0-3][0-9] [0-2][0-9]:[0-5][0-9]{2}$" />
  </type>
  
  <type name="Enum" base="SQL" />
  
  <type name="Set" base="SQL">
    <define-constraint name="range"		type="client" />
    <define-constraint name="minimum"	type="client" />
    <define-constraint name="maximum"	type="client" />
  </type>
 </types>
</schema>