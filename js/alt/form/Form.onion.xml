<?xml version="1.0"?>
<onion	xmlns:tag="http://alt.cellosoft.com/xml/onion/tag" 
		xmlns:arg="http://alt.cellosoft.com/xml/onion/arg"
		xmlns:set="http://alt.cellosoft.com/xml/onion/set">


<!-- main layout -->
<tag:form whitespace="ignore">
	<form><set:method><arg:method/></set:method>
		<for data="fields"> 
			<field><get name="field"/></field>
		</for>
	</form>
</tag:form>

<tag:field whitespace="ignore">
	<label><set:for><arg:id/></set:for><arg:name/></label>
	<input>
		<set:type><arg:type/></set:type>
		<set:name><arg:id/></set:name>
		<set:id><arg:id/></set:id>
		<set:value><arg:value/></set:value>
	</input>
</tag:field>

	
</onion>