<?xml version="1.0"?>
<onion xmlns:tag="http://alt.cellosoft.com/xml/onion/tag" 
xmlns:arg="http://alt.cellosoft.com/xml/onion/arg"
xmlns:set="http://alt.cellosoft.com/xml/onion/set">


<!-- main layout -->
<tag:guestbook><html>
 <head>
  <title>GuestBook</title>
  <styles fg="white" bg="black"/>
 </head>
 <body>
  <h1>Guestbook</h1>
  <form method="post">
  	<dl>
  		<dt><label for="name">Name</label></dt>
	    <dd><input name="name" id="name" /></dd>
	    <dt><label for="body">Body</label></dt>
	    <dd><textarea name="body" id="body"></textarea></dd>
	    <dd><input name="international" id="international" type="checkbox" /><label for="international">International</label></dd>
	    <dd><input type="submit" value="Post!" /></dd>
	</dl>
  </form>
  <div id="contents">
   <p><b>Page:</b> <arg:page/> / <arg:pages/></p>
   <for item="post" data="posts">
    <post/>
   </for>
  </div>
  <p><a href="source">View the source of this page!</a></p>
 </body>
</html></tag:guestbook>


<tag:post>
	<div class="post">
		<h2><get data="post.name"/>
		 <span class="time">(<get data="post.time"/>) - 
		 <if data="post.international">international<else>domestic</else></if> 
		 </span>
		</h2>
		<p><get data="post.body"/></p>
	</div>
</tag:post>

<!-- styles -->
<tag:styles><style type="text/css">
body {
	color: <arg:fg/>;
	background: <arg:bg/>;
}
body,h1,p,input,textarea {
	font-family: verdana;
}
body,p,input,textarea {
	font-size: 12pt;
}
a {
	color: <arg:fg/>
}
h1 { 
	border-bottom: solid 2px <arg:fg/>; 
}
#contents {
	padding: 1em;
	border-top: solid 2px <arg:fg/>;
	border-bottom: solid 2px <arg:fg/>;
	
}
#footer {
	font-size: 70%;
}
form dt {
	float: left;
	width: 10em;
}
form dd {
	margin-left: 11em;
	margin-bottom: .5em;
}
form dd textarea, form dd input {
	width: 50em;
}
form dd input[type=submit],form dd input[type=checkbox] {
	width: auto;
}
.post .time {
	font-size: 50%;
}
</style></tag:styles>
	
</onion>