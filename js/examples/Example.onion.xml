<?xml version="1.0"?>
<onion xmlns:tag="http://alt.cellosoft.com/xml/onion/tag" 
xmlns:arg="http://alt.cellosoft.com/xml/onion/arg"
xmlns:set="http://alt.cellosoft.com/xml/onion/set">


<!-- main layout -->
<tag:example-page><html>
 <head>
  <title><arg:title/></title>
  <styles fg="white" bg="#333"/>
 </head>
 <body>
  <h1><arg:title/></h1>
  <div id="contents"><arg:body/></div>
  <p><a href="source">View the source of this page!</a></p>
  <div id="footer"><footer/></div>
 </body>
</html></tag:example-page>

<tag:footer>made with alt servlet</tag:footer>

<!-- styles -->
<tag:styles><style>
body {
	color: <arg:fg/>;
	background: <arg:bg/>;
}
body,h1,p {
	font-family: verdana;
}
a {
	color: <arg:fg/>
}
h1 { 
	border-bottom: solid 2px <arg:fg/>; 
}
#contents {
	margin: 1em;
	
}
#footer {
	font-size: 70%;
}
</style></tag:styles>
	
</onion>